{
  "name": "dspbr-pt",
  "version": "0.3.2",
  "description": "A WebGL2 Enterprise PBR sample renderer",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "dependencies": {
    "@types/three": "^0.131.0",
    "three": "^0.132.2"
  },
  "devDependencies": {
    "dat.gui": "^0.7.7",
    "parcel": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "shx": "^0.3.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "argparse": "^2.0.1",
    "copyfiles": "^2.4.1",
    "electron": "^9.4.0",
    "replace-in-files-cli": "^1.0.0",
    "typescript": "^4.3.5"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "scripts": {
    "render": "electron src/cli/offscreen.js --enable-logging",
    "clean": "shx rm -rf dist/*",
    "build-viewer": "npm run clean && parcel build src/viewer/index.html --out-dir dist --public-url ./ --no-source-maps",
    "build-lib": "npm run clean && tsc && npm run copy-lib-files",
    "dev": "npm run clean && parcel src/viewer/index.html --port 3000 --open",
    "validation": "npm run build-cli && python scripts/run_validation.py",
    "build-cli": "npm run clean && parcel build src/cli/headless.html --public-url ./",
    "copy-lib-files": "copyfiles -u 2 src/lib/bvh.js src/lib/bvh.d.ts src/lib/README.md src/lib/shader/* dist/"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "assets",
        "staticOutDir": "assets"
      },
      {
        "staticPath": "src/lib/shader",
        "staticOutDir": "shader"
      }
    ],
    "watcherGlob": "**"
  },
  "files": [
    "/dist",
    "!/src/lib",
    "!/src/lib/shader",
    "!.DS_Store"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt"
  },
  "author": "Bastian Sdorra <bastian.SDORRA@3ds.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/DassaultSystemes-Technology/dspbr-pt/issues"
  },
  "homepage": "https://github.com/DassaultSystemes-Technology/dspbr-pt#readme"
}
